---
import Typewriter from "./Typewriter.astro";
---

<div
  class="bg-gradient-to-t from-white to-stone-100 dark:from-stone-950 dark:to-stone-900 font-mono min-h-52 p-5 text-xs shadow-md"
>
  <div
    class="max-w-[50rem] p-5 mx-auto flex flex-row items-center justify-between"
  >
    <div class="grow">
      <Typewriter string="> ls -la nate" class="text-stone-400" />
      <ul class="mt-2 ml-4 leading-relaxed">
        <li>
          <Typewriter
            string="music"
            childTag="a"
            childProps={{ href: "/music" }}
            delay={0.7}
            class="hover:opacity-50 transition-opacity"
          />
        </li>
        <li>
          <Typewriter
            string="code"
            childTag="a"
            childProps={{ href: "/code" }}
            delay={1.0}
            class="hover:opacity-50 transition-opacity"
          />
        </li>
        <li>
          <Typewriter
            string="blog"
            childTag="a"
            childProps={{ href: "/blog" }}
            delay={1.3}
            class="hover:opacity-50 transition-opacity"
          />
        </li>
        <li>
          <Typewriter
            string="photos"
            childTag="a"
            childProps={{ href: "/photography" }}
            delay={1.6}
            class="hover:opacity-50 transition-opacity"
          />
        </li>
      </ul>
    </div>
    <div>
      <span class="text-9xl font-display text-stone-300 dark:text-stone-800"
        >N</span
      >
    </div>
  </div>
</div>
