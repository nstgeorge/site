---
const { post } = Astro.props;
const tags = post.data.tags.split(",");
---

<a
    href=`blog/${post.id}`
    class="relative flex flex-col sm:flex-row sm:gap-2 sm:items-center mb-8 sm:mb-4 hover:opacity-60 transition-opacity"
>
    <span class="opacity-60 text-xxs font-mono leading-none shrink-0"
        >{post.data.date}</span
    >
    <span class="font-bold text-lg shrink-0 mt-1 mb-2 sm:m-0"
        >{post.data.title}</span
    >
    <div class="flex gap-2 overflow-hidden">
        {tags.map((tag) => <span class="tag">{tag.trim()}</span>)}
        <!-- Shade for excessive tags -->
        <div
            class="absolute right-0 bg-linear-to-l from-stone-200 dark:from-stone-800 to-transparent h-full w-16 pointer-events-none"
        >
        </div>
    </div>
</a>
