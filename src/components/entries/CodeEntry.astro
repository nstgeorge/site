---
import { Image } from "astro:assets";
const { entry, isOnSinglePage } = Astro.props;
const tags = entry.data.tags?.split(",");
const techs = entry.data.technologies?.split(",");

const image = import(`../../assets/images/code/${entry.data.image}`);
---

<li
  class="rounded-lg hover:bg-stone-300/40 dark:hover:bg-stone-700/20 transition-colors"
>
  <a
    class="flex flex-col md:flex-row md:gap-5 items-center px-5 py-3"
    href=`/code/${entry.id}`
  >
    <Image
      src={image}
      alt={`${entry.data.title} art`}
      width="900"
      height="600"
      class="shadow-md max-w-60! md:max-w-40!"
    />
    <div class="flex flex-col mb-1 mt-1 text-lg md:text-base">
      <span class="font-bold text-xl mb-2">{entry.data.title}</span>
      <span class="text-[11px] text-stone-500 font-mono"
        >{entry.data.releaseDate}</span
      >
    </div>

    <div
      class="relative w-full flex justify-center flex-wrap gap-2 overflow-hidden font-mono"
    >
      {techs?.map((tech) => <span class="tag">{tech.trim()}</span>)}
      <span class="text-xxs text-stone-500"> // </span>
      {tags?.map((tag) => <span class="tag">{tag.trim()}</span>)}
    </div>
  </a>
</li>
